<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewAuthor"
        android:layout_width="@dimen/image_widht"
        android:layout_height="@dimen/image_height"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_author"/>

    <ImageView
        android:id="@+id/imageViewStudio"
        android:layout_width="@dimen/image_widht"
        android:layout_height="@dimen/image_height"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_studio"/>

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/imageViewAuthor"
        android:layout_alignStart="@+id/imageViewAuthor"
        android:layout_alignRight="@+id/imageViewAuthor"
        android:layout_alignEnd="@+id/imageViewAuthor"
        android:text="@string/developer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/greyMaterialDark"
        android:layout_below="@+id/imageViewAuthor"/>

    <TextView
        android:id="@+id/textViewCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/copyright"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/greyMaterialDark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewAbout"/>

    <ImageView
        android:id="@+id/imageViewGitHub"
        android:layout_width="@dimen/size_github"
        android:layout_height="@dimen/size_github"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_github"
        android:layout_below="@+id/textViewCopyright"/>

</RelativeLayout>
